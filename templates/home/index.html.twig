{% extends 'base.html.twig' %}

{% block title %}vMoove{% endblock %}

{% block stylesheets %}
    <style>
        #default-carousel h1 {
            font-family: 'Bridgend';
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Carousel Header -->
    <div id="default-carousel" class="relative w-full h-screen" data-carousel="slide">
        <!-- Carousel wrapper -->
        <div class="relative h-full overflow-hidden">
            <!-- Item 1 -->
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
                <img src="{{ asset('media/slide_carousel.jpg') }}" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Slide 1">
                <!-- Texte et logo -->
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                    <div class="flex items-center mb-4">
                        <img src="{{ asset('media/logo_vmoove_blanc.png') }}" alt="Logo vMoove" class="h-[8rem] mr-8">
                        <h1 class="font-bridgend text-12xl font-extrabold leading-none tracking-tight text-white md:text-12xl lg:text-12xl">vMoove</h1>
                    </div>
                    <div class="flex mt-16">
                        <button type="button" class="bg-fond focus:outline-none text-white hover:bg-fond focus:ring-4 focus:ring-purple-300 rounded-lg text-sm px-5 py-2.5 mb-2 mr-4">
                            En Savoir +
                        </button>
                        <button type="button" class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2">
                            Bouton 2
                        </button>
                    </div>
                </div>
            </div>
            <!-- Item 2 -->
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
                <img src="{{ asset('media/slide_maillot_header.jpg') }}" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="Slide 2">
            </div>
        </div>
        <!-- Slider indicators -->
        <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
            <button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
            <button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
        </div>
        <!-- Slider controls -->
        <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-hover:bg-white/50 group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
                <svg class="w-4 h-4 text-white rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                </svg>
                <span class="sr-only">Previous</span>
            </span>
        </button>
        <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-hover:bg-white/50 group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
                <svg class="w-4 h-4 text-white rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <span class="sr-only">Next</span>
            </span>
        </button>
    </div>

    <!-- Section Présentation -->
    <section class="bg-gray-900 text-white py-20">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-bold mb-4">Bienvenue chez vMoove</h2>
            <p class="text-xl mb-8">La team esport Brawl Stars qui repousse les limites du jeu.</p>
            <a href="#" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300">
                Découvrir l'équipe
                <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
        </div>
    </section>

    <!-- Section Équipe -->
    <section class="bg-gray-800 text-white py-20">
        <div class="container mx-auto px-6">
            <h2 class="text-4xl font-bold text-center mb-8">Notre Équipe</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Joueur 1 -->
                <div class="bg-gray-900 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Joueur 1" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">Alex</h3>
                    <p class="text-gray-400">DPS - Top 10 Europe</p>
                </div>
                <!-- Joueur 2 -->
                <div class="bg-gray-900 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Joueur 2" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">Sam</h3>
                    <p class="text-gray-400">Support - Stratège</p>
                </div>
                <!-- Joueur 3 -->
                <div class="bg-gray-900 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Joueur 3" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">Léa</h3>
                    <p class="text-gray-400">Capitaine - MVP 2023</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Créateurs -->
    <section class="bg-gray-900 text-white py-20">
        <div class="container mx-auto px-6">
            <h2 class="text-4xl font-bold text-center mb-8">Nos Créateurs de Contenu</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Créateur 1 -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Créateur 1" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">vMoove_Sam</h3>
                    <p class="text-gray-400">Streamer Brawl Stars</p>
                </div>
                <!-- Créateur 2 -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Créateur 2" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">vMoove_Léa</h3>
                    <p class="text-gray-400">YouTube Gameplay</p>
                </div>
                <!-- Créateur 3 -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Créateur 3" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">vMoove_Alex</h3>
                    <p class="text-gray-400">Tutoriels Brawl Stars</p>
                </div>
                <!-- Créateur 4 -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <img src="https://via.placeholder.com/150" alt="Créateur 4" class="rounded-full mx-auto mb-4">
                    <h3 class="text-2xl font-semibold mb-2">vMoove_Chris</h3>
                    <p class="text-gray-400">Clips et Highlights</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Section CTA -->
    <section class="bg-gray-800 text-white py-20">
        <div class="container mx-auto px-6 text-center">
            <h2 class="text-4xl font-bold mb-4">Rejoignez la communauté vMoove</h2>
            <p class="text-xl mb-8">Suivez-nous sur nos réseaux et découvrez nos créateurs de contenu.</p>
            <a href="#" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300">
                Suivez-nous
                <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
        </div>
    </section>
{% endblock %}